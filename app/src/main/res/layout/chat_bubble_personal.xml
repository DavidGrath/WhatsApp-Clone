<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:background="@drawable/chat_bubble_outgoing"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/chat_message_personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:textColor="#000"
        tools:text="Common Text Me" />

    <ImageView
        android:id="@+id/sent_tick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@id/chat_incoming_time"
        android:tint="@color/checkmark_blue"
        app:srcCompat="@drawable/ic_done_all_black_24dp" />

    <TextView
        android:id="@+id/chat_incoming_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/chat_message_personal"
        android:textColor="#7f7f7f"
        android:textSize="10sp"
        tools:text="12:00 AM" />
</RelativeLayout>